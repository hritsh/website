---
import Window from "./Window.astro";
import { projectsData } from "../data/projects";

const details = [projectsData.length + " items", "2,340K in disk", '<a href="/projects">View All</a>'];
---

<Window title="Projects" id="projects" showDetailsBar={true} details={details}>
	<div class="projects-finder">
		{
			projectsData.map((project) => (
				<div class="project-item">
					{/* <a href={`/projects/${project.name.toLowerCase()}`} title={project.title}> */}
					{/* for modal links im not feeling it rn */}
					<a href={`/projects#${project.name.toLowerCase()}`} title={project.title}>
						<img class="project-icon" src={project.icon} alt={project.name} />
						<div class="project-filename">{project.name}</div>
						<div class="project-description">{project.title}</div>
					</a>
				</div>
			))
		}
	</div>
</Window>
