---
export interface Props {
	pageTitle?: string;
}

const { pageTitle } = Astro.props;
---

<header class="main-header window">
	<div class="title-bar">
		<button aria-label="Close" class="close"></button>
		<h1 class="title">
			{
				pageTitle ? (
					<>
						<object data="/svg/folder.svg" class="page-logo" width="18" height="18" />
						{pageTitle}
					</>
				) : (
					<>
						<object data="/svg/myspace.svg" class="myspace-logo" width="24" height="24" />
						hritish.com
					</>
				)
			}
		</h1>
		<button aria-label="Resize" class="resize"></button>
	</div>
	<div class="separator"></div>
	<nav class="navbar">
		<ul role="menubar">
			<li role="menuitem" tabindex="0" aria-haspopup="false">
				<a href="/" class="home-icon">
					<img src="/svg/apple.svg" width="18" height="18" alt="Home Icon" />
				</a>
			</li>
			<li role="menuitem" tabindex="1" aria-haspopup="false">
				<a href="/">Home</a>
			</li>
			<li role="menuitem" tabindex="2" aria-haspopup="false">
				<a href="/projects">Projects</a>
			</li>
			<li role="menuitem" tabindex="3" aria-haspopup="false">
				<a href="/experience">Experience</a>
			</li>
			<li role="menuitem" tabindex="4" aria-haspopup="false">
				<a href="/tech">Tech</a>
			</li>
			<li role="menuitem" tabindex="5" aria-haspopup="false">
				<a href="/files/resume.pdf" target="_blank">Resume</a>
			</li>
		</ul>
		<div class="navbar-right">
			<span id="navbar-clock" class="navbar-clock"></span>
			<button id="about-info-btn" class="info-btn" aria-label="About this website">
				<object data="/svg/info.svg" type="image/svg+xml" width="15" height="15"></object>
			</button>
		</div>
	</nav>
</header>
